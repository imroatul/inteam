<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warnaToscaPrimary">

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="500dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="dp"
        android:background="@color/warnaPutihBack">


    </FrameLayout>


    <EditText
        android:id="@+id/editTextNamaLengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nama Lengkap"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="146dp"
        android:textColor="@color/warnaAbuabuPrimary"/>

    <RadioButton
        android:id="@+id/radioButtonLakiLaki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laki-laki"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="189dp"
        android:textColor="@color/warnaAbuabuPrimary"/>

    <RadioButton
        android:id="@+id/radioButtonPerempuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perempuan"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="189dp"
        android:textColor="@color/warnaAbuabuPrimary"/>

    <EditText
        android:id="@+id/editTextAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Alamat"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="221dp"
        android:textColor="@color/warnaAbuabuPrimary"/>

    <EditText
        android:id="@+id/editTextKota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Kota"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="264dp"
        android:textColor="@color/warnaAbuabuPrimary"/>

    <EditText
        android:id="@+id/editTextTelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:text="Telepon"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="341dp"
        android:textColor="@color/warnaAbuabuPrimary"/>

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="384dp"
        android:textColor="@color/warnaAbuabuPrimary"/>

    <EditText
        android:id="@+id/editTextPassw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="427dp"
        android:textColor="@color/warnaAbuabuPrimary"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteY="30dp"
        tools:layout_editor_absoluteX="150dp"
        android:textColor="@color/warnaAbuabuPrimary"/>



</android.support.constraint.ConstraintLayout>